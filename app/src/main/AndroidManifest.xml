<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech.jklaw.bitconnectsoundboard">

    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="tech.jklaw.bitconnectsoundboard.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tech.jklaw.bitconnectsoundboard.AboutActivity"
            android:label="@string/title_about"
            android:parentActivityName="tech.jklaw.bitconnectsoundboard.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tech.jklaw.bitconnectsoundboard.MainActivity" />
        </activity>
        <activity
            android:name="tech.jklaw.bitconnectsoundboard.DonationsActivity"
            android:label="@string/donate_title">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>